{
  "name": "nano-charts",
  "version": "0.0.0-development",
  "description": "A zero-dependency goodness for visualizing your data. Currently only implements the Line Chart.",
  "keywords": [
    "chart"
  ],
  "main": "dist/nano-charts.umd.js",
  "module": "dist/nano-charts.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Nikita Luchko <luchkonikita@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/luchkonikita/nano-charts"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint  --project tsconfig.json -t codeFrame --fix 'src/**/*.ts' 'test/**/*.ts'",
    "bundlesize": "bundlesize",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run bundlesize & npm run lint && npm run test -- --coverage --no-cache",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "bundlesize": [
    {
      "path": "./dist/nano-charts.es5.js",
      "maxSize": "4 kB"
    }
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "bundlesize": "^0.17.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lodash.camelcase": "^4.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.2",
    "rollup-plugin-babel-minify": "^6.2.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "semantic-release": "^15.13.1",
    "semantic-release-cli": "^4.1.0",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
